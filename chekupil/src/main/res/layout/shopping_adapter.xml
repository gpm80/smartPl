<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/contextLayout"
              style="@style/CommonItemAdapter"
              android:background="@drawable/selector"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/shopping_is_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/ic_shopping_new"/>
        <ImageView
                android:id="@+id/shopping_common_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/ic_shopping"/>
        <TextView
                android:id="@+id/shopping_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_common"/>
        <TextView
                android:id="@+id/shopping_ratio"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="match_parent"
                android:text="0/0"
                android:textSize="@dimen/font_size_common"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/shopping_author_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/shopping_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_min"
                android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>