<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/contextLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/buy_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/buy_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="@dimen/font_size_header_group_buy"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/buy_view_layout"
            style="@style/CommonItemAdapter"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/buy_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/checkbox_off_background"/>
        <TextView
                android:id="@+id/buy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_common"/>
    </LinearLayout>
</LinearLayout>